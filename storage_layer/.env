# =============================================================================
# CONFIGURAZIONE MONGODB - FILE DI ESEMPIO
# =============================================================================
# Copia questo file come .env nella directory storage_layer e modifica i valori
# secondo la tua configurazione MongoDB
#
# IMPORTANTE: Non committare mai il file .env con credenziali reali!
# =============================================================================

# -----------------------------------------------------------------------------
# CONFIGURAZIONE BASE MONGODB
# -----------------------------------------------------------------------------

# Host del server MongoDB (default: localhost)
MONGODB_HOST=localhost

# Porta del server MongoDB (default: 27017)
MONGODB_PORT=27017

# Nome del database (default: pmi_infrastructure)
MONGODB_DATABASE=pmi_infrastructure

# -----------------------------------------------------------------------------
# AUTENTICAZIONE MONGODB
# -----------------------------------------------------------------------------

# Username per l'autenticazione (lasciare vuoto se non richiesta)
MONGODB_USERNAME=

# Password per l'autenticazione (lasciare vuoto se non richiesta)
MONGODB_PASSWORD=

# Database di autenticazione (default: admin)
MONGODB_AUTH_SOURCE=admin

# -----------------------------------------------------------------------------
# CONFIGURAZIONI AVANZATE
# -----------------------------------------------------------------------------

# Nome del replica set (lasciare vuoto se non utilizzato)
MONGODB_REPLICA_SET=

# Abilitazione SSL/TLS (true/false)
MONGODB_SSL_ENABLED=false

# Percorsi certificati SSL (solo se SSL_ENABLED=true)
MONGODB_SSL_CERT_PATH=
MONGODB_SSL_KEY_PATH=
MONGODB_SSL_CA_PATH=

# -----------------------------------------------------------------------------
# POOL DI CONNESSIONI
# -----------------------------------------------------------------------------

# Numero massimo di connessioni nel pool
MONGODB_MAX_POOL_SIZE=100

# Numero minimo di connessioni nel pool
MONGODB_MIN_POOL_SIZE=10

# Tempo massimo di inattivit√† per una connessione (ms)
MONGODB_MAX_IDLE_TIME_MS=30000

# -----------------------------------------------------------------------------
# TIMEOUT E RETRY
# -----------------------------------------------------------------------------

# Timeout per la connessione iniziale (ms)
MONGODB_CONNECT_TIMEOUT_MS=10000

# Timeout per la selezione del server (ms)
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Timeout per le operazioni socket (ms)
MONGODB_SOCKET_TIMEOUT_MS=20000

# Abilitazione retry per le scritture (true/false)
MONGODB_RETRY_WRITES=true

# Abilitazione retry per le letture (true/false)
MONGODB_RETRY_READS=true

# -----------------------------------------------------------------------------
# CONFIGURAZIONI AMBIENTE
# -----------------------------------------------------------------------------

# Ambiente di esecuzione (development/production/testing)
ENVIRONMENT=development

# Livello di logging per MongoDB (DEBUG/INFO/WARNING/ERROR)
MONGODB_LOG_LEVEL=INFO

# =============================================================================
# ESEMPI DI CONFIGURAZIONE PER DIVERSI AMBIENTI
# =============================================================================

# SVILUPPO LOCALE (MongoDB senza autenticazione)
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_DATABASE=pmi_infrastructure_dev
# ENVIRONMENT=development

# PRODUZIONE (MongoDB con autenticazione e SSL)
# MONGODB_HOST=mongodb-prod.example.com
# MONGODB_PORT=27017
# MONGODB_DATABASE=pmi_infrastructure
# MONGODB_USERNAME=pmi_user
# MONGODB_PASSWORD=secure_password_here
# MONGODB_SSL_ENABLED=true
# ENVIRONMENT=production

# TESTING (Database separato per i test)
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_DATABASE=pmi_infrastructure_test
# ENVIRONMENT=testing