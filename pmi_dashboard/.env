# ============================================================================
# PMI Dashboard Configuration Template
# ============================================================================
# 
# This file contains all available configuration options for the PMI Dashboard.
# Copy this file to create your own .env configuration and customize the values
# for your specific environment.
#
# IMPORTANT: Never commit your actual .env file to version control!
# ============================================================================

# ============================================================================
# Flask Application Settings
# ============================================================================

# Secret key for session management, CSRF protection, and other security features
# CRITICAL: Change this to a random, secure value in production!
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Flask server bind address
# Use 0.0.0.0 to accept connections from any IP (useful for Docker/remote access)
# Use 127.0.0.1 for localhost-only access (more secure for development)
FLASK_HOST=127.0.0.1

# Flask server port
# Default: 5000, Range: 1-65535
# Make sure this port is not used by other applications
FLASK_PORT=5000

# Enable Flask debug mode
# Set to True for development (enables auto-reload, detailed error pages)
# Set to False for production (required for security)
FLASK_DEBUG=True

# ============================================================================
# Application Data Storage
# ============================================================================

# Directory where application data files are stored
# Can be absolute path (/var/lib/pmi-dashboard) or relative (./data)
# The application will create this directory if it doesn't exist
DATA_DIR=./data

# Proxmox configuration file path
# Can be absolute path or relative to DATA_DIR
# This file stores Proxmox node connection configurations
PROXMOX_CONFIG_FILE=proxmox_config.json

# ============================================================================
# Proxmox VE Default Connection Settings
# ============================================================================

# Default port for Proxmox VE API connections
# Standard Proxmox VE uses port 8006
# Range: 1-65535
PROXMOX_DEFAULT_PORT=8006

# SSL certificate verification for Proxmox connections
# Set to True in production environments with valid SSL certificates
# Set to False for self-signed certificates or testing (less secure)
PROXMOX_SSL_VERIFY=False

# Connection timeout for Proxmox API calls (in seconds)
# Increase for slow networks or overloaded Proxmox servers
# Range: 1-300 (recommended: 10-60)
PROXMOX_TIMEOUT=30

# ============================================================================
# Real-time Monitoring and Updates
# ============================================================================

# Interval for automatic metrics refresh (in seconds)
# Lower values = more real-time but higher server load
# Higher values = less server load but less real-time
# Range: 1-300 (recommended: 5-15 for real-time, 30-60 for low load)
METRICS_REFRESH_INTERVAL=10

# ============================================================================
# Logging Configuration
# ============================================================================

# Application log level
# DEBUG: Detailed information for debugging
# INFO: General information about application operation
# WARNING: Warning messages for potential issues
# ERROR: Error messages for serious problems
# CRITICAL: Critical errors that may cause application failure
LOG_LEVEL=INFO

# Log file path (optional)
# Leave empty to log only to console
# Specify path to log to file: /var/log/pmi-dashboard.log or ./logs/app.log
# The directory must exist or be writable by the application
LOG_FILE=

# ============================================================================
# Security Settings (Production Deployment)
# ============================================================================

# Force HTTPS redirect
# Set to True in production to redirect all HTTP requests to HTTPS
# Requires proper SSL/TLS setup (reverse proxy, certificates)
FORCE_HTTPS=False

# Session timeout (in minutes)
# How long user sessions remain active without activity
# Range: 1-1440 (1 minute to 24 hours, recommended: 30-120)
SESSION_TIMEOUT=60

# Maximum file upload size (in MB)
# Limits the size of files that can be uploaded to the application
# Range: 1-1024 (recommended: 1-50 for most use cases)
MAX_UPLOAD_SIZE=10

# ============================================================================
# Advanced Configuration (Optional)
# ============================================================================

# Custom CSS theme file path (optional)
# Specify path to custom CSS file for theme customization
# CUSTOM_CSS_FILE=

# Custom JavaScript file path (optional)
# Specify path to custom JavaScript file for functionality extension
# CUSTOM_JS_FILE=

# Database connection string (for future database support)
# Currently unused, reserved for future database integration
# DATABASE_URL=

# Redis connection string (for future caching/session storage)
# Currently unused, reserved for future Redis integration
# REDIS_URL=

# ============================================================================
# Environment-Specific Examples
# ============================================================================

# Development Environment Example:
# SECRET_KEY=dev-key-not-for-production
# FLASK_HOST=127.0.0.1
# FLASK_PORT=5000
# FLASK_DEBUG=True
# LOG_LEVEL=DEBUG

# Production Environment Example:
# SECRET_KEY=your-very-secure-random-key-here
# FLASK_HOST=0.0.0.0
# FLASK_PORT=8080
# FLASK_DEBUG=False
# FORCE_HTTPS=True
# LOG_LEVEL=INFO
# LOG_FILE=/var/log/pmi-dashboard/app.log

# Docker Environment Example:
# FLASK_HOST=0.0.0.0
# DATA_DIR=/app/data
# LOG_FILE=/app/logs/pmi-dashboard.log